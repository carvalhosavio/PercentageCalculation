<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
	  <TargetFramework>net6.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <AssemblyVersion>1.0.0.13</AssemblyVersion>
    <FileVersion>1.0.0.13</FileVersion>
    <Version>1.0.0.13</Version>
    <Authors>saviocarvalho</Authors>
    <Description>percentage math calculations</Description>
    <RepositoryUrl>https://github.com/carvalhosavio/PercentageCalculation</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <NeutralLanguage>pt-BR</NeutralLanguage>
  </PropertyGroup>

	<PropertyGroup>
		<PackageLicenseFile>.\LICENSE.txt</PackageLicenseFile>
	</PropertyGroup>

  <ItemGroup>
    <Compile Remove="NovaPasta\**" />
    <EmbeddedResource Remove="NovaPasta\**" />
    <None Remove="NovaPasta\**" />
  </ItemGroup>

  <ItemGroup>
    <None Include="..\README.md">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

	<ItemGroup>
		<None Include=".\LICENSE.txt" Pack="true" PackagePath="" />
	</ItemGroup>

</Project>
